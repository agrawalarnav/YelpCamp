<% layout('layouts/boilerplate')%>
    <h1>ALL CAMPGROUNDS</h1>
    <div>
      <a href="/campgrounds/new">add campgrounds</a>
    </div>
    <ul>
      <% for(let camp of camps){ %>
        <div class="card" mb-3>
          <div class="row">
            <div class="col-md-4">
             <img class="img-fluid" src="<%=camp.images[0].url%>">
            </div>
            <div class="col-md-8">
              <h5 class="card-title"><%=camp.title%></h5>
              <p class="card-text"><%=camp.price%></p>
              <p class="card-text"><%=camp.description%></p>
              <p class="card-text">
                <small class="text-muted"><%=camp.location%></small>
              </p>
              <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
            </div>
          </div>
        </div>
         
       <% } %>
    </ul>
